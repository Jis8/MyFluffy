<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>


    </style>

    <style name="ButtonStyle" parent="@android:style/Widget.DeviceDefault.Button.Borderless">
        <item name="android:fontFamily">@font/nanum_square_b</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:background">@drawable/roundsquare</item>
    </style>


    <style name="ButtonDefaultText" parent="@android:style/Widget.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/nanum_square_b</item>
        <item name="android:textColor">#333333</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:background">@drawable/roundsquare</item>
    </style>

    <style name="ButtonFoodTextWithIcon" parent="ButtonDefaultText">
        <item name="android:drawableTop">@drawable/ic_main_food</item>
    </style>

    <style name="ButtonToiletTextWithIcon" parent="ButtonDefaultText">
        <item name="android:drawableTop">@drawable/ic_main_toilet</item>
    </style>

    <style name="ButtonWalkTextWithIcon" parent="ButtonDefaultText">
        <item name="android:drawableTop">@drawable/ic_main_walk</item>
    </style>

    <style name="ButtonRecordTextWithIcon" parent="ButtonDefaultText">
        <item name="android:drawableTop">@drawable/ic_main_record</item>
    </style>

    <style name="ButtonCalendarTextWithIcon" parent="ButtonDefaultText">
        <item name="android:drawableTop">@drawable/ic_main_cal</item>
    </style>

    <style name="ButtonClinicTextWithIcon" parent="ButtonDefaultText">
        <item name="android:drawableTop">@drawable/ic_main_clinic</item>
    </style>



</resources>
