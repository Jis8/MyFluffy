<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/cal_outline"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingHorizontal="2dp"
        android:paddingBottom="2dp">

        <TextView
            android:id="@+id/gitem_tvDate"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="left"
            android:paddingLeft="4dp"
            android:paddingTop="4dp"
            android:text="21" />

        <ImageView
            android:id="@+id/gitem_iv5"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:padding="2dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingHorizontal="2dp">

        <ImageView
            android:id="@+id/gitem_iv4"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:paddingHorizontal="2dp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/gitem_iv3"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:paddingHorizontal="2dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingHorizontal="2dp">

        <ImageView
            android:id="@+id/gitem_iv2"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:padding="2dp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/gitem_iv1"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:padding="2dp"
            android:layout_weight="1"/>
    </LinearLayout>


</LinearLayout>