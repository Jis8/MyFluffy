<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RecordActivity">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/tvToolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/nanum_square_b"
            android:text="기록"
            android:textSize="18sp" />

        <Button
            android:id="@+id/tbBtnSave"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="right"
            android:layout_marginRight="8dp"
            android:background="@drawable/ic_done_black_24dp"
            android:gravity="center" />


    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp">
        <!--<Button
            android:id="@+id/btnCategory"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:text="category" />-->

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp">

            <RadioGroup
                android:id="@+id/rgToilet"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="invisible">

                <RadioButton
                    android:id="@+id/rbPee"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector"
                    android:button="@null"
                    android:checked="true"
                    android:fontFamily="@font/nanum_square_b"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="소변"
                    android:textSize="14dp" />

                <RadioButton
                    android:id="@+id/rbPoo"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector"
                    android:button="@null"
                    android:fontFamily="@font/nanum_square_b"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="대변"
                    android:textSize="14dp" />
            </RadioGroup>

            <LinearLayout
                android:id="@+id/linearTitle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/round_square_outline"
                android:paddingHorizontal="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/nanum_square_b"
                    android:text="제목"
                    android:textSize="14dp" />

                <AutoCompleteTextView
                    android:id="@+id/edtTitle"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@null"
                    android:completionThreshold="1"
                    android:fontFamily="@font/nanum_square_r"
                    android:textSize="14dp" />

            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:id="@+id/linearDateTime"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginVertical="5dp"
            android:background="@drawable/round_square_outline"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/nanum_square_b"
                android:text="시간"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:fontFamily="@font/nanum_square_r"
                android:text="0000년 00월 00일 (수)"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:fontFamily="@font/nanum_square_r"
                android:text="10 : 10 "
                android:textSize="14dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanum_square_r"
                android:text="-" />

            <TextView
                android:id="@+id/tvTimeEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:fontFamily="@font/nanum_square_r"
                android:text="10 : 20"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:background="@drawable/round_square_outline"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/nanum_square_b"
                android:text="메모"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/edtContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:fontFamily="@font/nanum_square_r"
                android:gravity="top"
                android:lineSpacingExtra="16dp"
                android:lines="5"
                android:textSize="14dp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearIB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:gravity="center">


            <com.example.jisoo.myfluffy.SquareImageButton
                android:id="@+id/ibtnPic1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="@drawable/round_square_outline"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_add_black_24dp" />

            <com.example.jisoo.myfluffy.SquareImageButton
                android:id="@+id/ibtnPic2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:background="@drawable/round_square_outline"
                android:scaleType="centerCrop" />

            <com.example.jisoo.myfluffy.SquareImageButton
                android:id="@+id/ibtnPic3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="@drawable/round_square_outline"
                android:scaleType="centerCrop" />
        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/btnSave"
        style="@style/ButtonStyle_roundSquare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="8dp"
        android:text="저장" />
</LinearLayout>